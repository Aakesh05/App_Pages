<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PageOrientations.Pages.Navigation_Pages_.NavPage1"
             Title="NavPage1"
             BackgroundColor="Purple">

    <VerticalStackLayout>
        <Label 
            Text="This is Content Page 1"
            FontSize="20"
            FontAttributes="Bold"
            Margin="20"
            TextColor="White"
            HorizontalOptions="Center"/>
        <Button 
            x:Name="navContentPage2Button"
            Text="Go To Page 2"
            Margin="20"
            Clicked="navContentPage2Button_Clicked">
        </Button>
    </VerticalStackLayout>
</ContentPage>